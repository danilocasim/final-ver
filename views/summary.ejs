<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>call summary & action plan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<%- include("partials/navbar") %>

<body class="bg-gray-50">
  <div class="min-h-screen p-6">
    <div class="max-w-7xl mx-auto container">
      <!-- header -->
      <div class="mb-8 header">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">call summary & action plan</h1>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full"><%= session.category %></span>
          <p>session id: <%= session.sessionid || session.sessionId %></p>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- left column - main content -->
        <div class="lg:col-span-2 content space-y-6">
          <!-- your situation -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-start gap-3 mb-4">
              <div class="text-blue-600">
                <svg class="w-6 h-6" fill="none" stroke="currentcolor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 12h.01m12 12h.01m16 12h.01m21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949l3 20l1.395-3.72c3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-gray-900">your situation</h2>
            </div>

            <% if (summary && summary.situation) { %>
              <div class="section">
                <h2>üìù situation summary</h2>
                <div class="situation-box text-gray-700 leading-relaxed"><%= summary.situation %></div>
              </div>
            <% } else { %>
              <p class="text-gray-700 leading-relaxed">No summary available yet. Processing...</p>
            <% } %>
          </div>

          <!-- relevant laws -->
          <div class="bg-white rounded-lg section shadow p-6">
            <div class="flex items-start gap-3 mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentcolor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0m6 7l3 9m6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0m18 7l3 9m-3-9l-6-2m0-2v2m0 16v5m0 16h9m3 0h3"></path>
              </svg>
              <div>
                <h2 class="text-xl font-semibold text-gray-900">relevant laws</h2>
                <p class="text-sm text-gray-600">philippine laws that protect your rights</p>
              </div>
            </div>

            <div class="space-y-4">
              <div class="border-l-4 border-blue-500 pl-4">
                <% if (summary && Array.isArray(summary.relevantLaws) && summary.relevantLaws.length > 0) { %>
                  <% summary.relevantLaws.forEach(function(law) { %>
                    <div class="border-l-4 border-blue-500 pl-4 mb-3">
                      <h3 class="font-semibold text-gray-900 mb-1"><%= law %></h3>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p class="text-gray-600">No relevant laws identified.</p>
                <% } %>
              </div>

              <!-- Recommended Steps -->
              <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-start gap-3 mb-4">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <div>
                    <h2 class="text-xl font-semibold text-gray-900">Recommended Steps</h2>
                    <p class="text-sm text-gray-600">Follow these actions to resolve your issue</p>
                  </div>
                </div>

                <% if (summary && Array.isArray(summary.recommendedSteps) && summary.recommendedSteps.length > 0) { %>
                  <ol class="steps-list space-y-3 list-decimal list-inside">
                    <% summary.recommendedSteps.forEach(function(step) { %>
                      <li class="text-gray-700"><%= step %></li>
                    <% }); %>
                  </ol>
                <% } else { %>
                  <p class="text-gray-600">No recommended steps available yet.</p>
                <% } %>
              </div>

              <% if (summary && Array.isArray(summary.watchOutFor) && summary.watchOutFor.length > 0) { %>
                <div class="bg-white rounded-lg shadow p-6 border-l-4 border-red-600">
                  <div class="flex items-start gap-3 mb-4">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M4.93 19h14.14c1.54 0 2.5-1.67 1.73-3L13.73 4.99c-.77-1.33-2.69-1.33-3.46 0L3.2 16c-.77 1.33.19 3 1.73 3z"></path>
                    </svg>
                    <div>
                      <h2 class="text-xl font-semibold text-gray-900">What to Watch Out For (Red Flags)</h2>
                      <p class="text-sm text-gray-600">Be alert for the following warning signs</p>
                    </div>
                  </div>
                  <ul class="space-y-2 list-disc list-inside">
                    <% summary.watchOutFor.forEach(function(warning) { %>
                      <li class="text-red-700 font-medium"><%= warning %></li>
                    <% }); %>
                  </ul>
                </div>
              <% } %>

            </div>
          </div>
        </div>

        <!-- Right Column - Sidebar -->
        <div class="space-y-6">
          <!-- Quick Actions -->
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Actions</h2>
            <div class="space-y-3">
              <button onclick="generateReport()" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg flex items-center justify-center gap-2 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg> Download Report (DOCX)
              </button>

              <a href="/call" class="w-full block bg-white hover:bg-gray-50 text-gray-700 font-medium py-3 px-4 rounded-lg border border-gray-300 flex items-center justify-center gap-2 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                Start New Call
              </a>
            </div>
          </div>

          <!-- Immediate Action -->
          <% if (summary && summary.nextAction) { %>
            <div class="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-6">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-yellow-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <h2 class="text-xl font-semibold text-gray-900">Immediate Action (URGENT)</h2>
              </div>
              <p class="text-gray-700"><%= summary.nextAction %></p>
            </div>
          <% } %>

          <!-- Important Contacts -->
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Important Contacts & Hotlines</h2>
            <div class="space-y-4">
              <% if (summary && summary.contacts && Object.keys(summary.contacts).length > 0) { %>
                <% for (const [key, value] of Object.entries(summary.contacts)) { %>
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1"><%= key.toUpperCase().replace(/_/g, ' ') %></h3>
                    <p class="text-sm text-gray-600"><%= value %></p>
                  </div>
                <% } %>
              <% } else { %>
                <p class="text-gray-600">No contacts available.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // ensure summary is always a safe object
      const summary = <%- JSON.stringify(summary || {}) %>;

      async function generateReport() {
        const sessionId = "<%= session.sessionId || session.sessionid %>";
        if (!summary || !summary.situation) {
          alert("Summary not available yet. Please wait for processing.");
          return;
        }
        try {
          const response = await fetch("/api/report/generate", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify({
              sessionId,
              reportType: "INCIDENT",
              templateData: {
                category: "<%= session.category %>",
                userName: "User",
                respondentName: "Respondent",
                incidentDate: new Date().toLocaleDateString("en-PH"),
                details: summary.situation,
                relevantLaws: summary.relevantLaws || [],
                recommendedSteps: summary.recommendedSteps || [],
                watchOutFor: summary.watchOutFor || [],
                contacts: summary.contacts || {},
                nextAction: summary.nextAction || ""
              }
            })
          });

          if (!response.ok) {
            throw new Error("Failed to generate report");
          }

          const report = await response.json();
          if (report && report.fileUrl) {
            window.open(report.fileUrl, "_blank");
          } else {
            alert("Report generation succeeded but no file returned.");
          }
        } catch (error) {
          alert("Error generating report. Please try again.");
          console.error(error);
        }
      }
    </script>
</body>

</html>
