<!-- views/summary.ejs - Summary Page -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Consultation Summary</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f5f5f5;
        padding: 2rem;
        color: #333;
      }
      .container {
        max-width: 900px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }
      .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
      }
      .header h1 {
        margin-bottom: 0.5rem;
      }
      .content {
        padding: 2rem;
      }
      .section {
        margin-bottom: 2rem;
      }
      .section h2 {
        color: #667eea;
        margin-bottom: 1rem;
        font-size: 1.3rem;
      }
      .situation-box {
        background: #f0f4ff;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #667eea;
      }
      .laws-list {
        list-style: none;
        padding: 0;
      }
      .laws-list li {
        padding: 0.75rem;
        background: #fff8e1;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        border-left: 3px solid #ffc107;
      }
      .steps-list {
        counter-reset: step-counter;
        list-style: none;
      }
      .steps-list li {
        counter-increment: step-counter;
        padding: 1rem;
        margin-bottom: 1rem;
        background: #e8f5e9;
        border-radius: 8px;
        position: relative;
        padding-left: 3rem;
      }
      .steps-list li::before {
        content: counter(step-counter);
        position: absolute;
        left: 1rem;
        top: 1rem;
        background: #4caf50;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
      }
      .contacts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }
      .contact-card {
        background: #f3e5f5;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
      }
      .contact-card strong {
        display: block;
        color: #7b1fa2;
        margin-bottom: 0.5rem;
      }
      .next-action {
        background: #ffebee;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #f44336;
        font-weight: 600;
      }
      .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
      }
      .btn {
        flex: 1;
        padding: 1rem;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
      }
      .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
      }
      .btn-secondary {
        background: #e0e0e0;
        color: #333;
      }
      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>üìã Consultation Summary</h1>
        <p>Session ID: <%= session.sessionId %></p>
        <p>Category: <%= session.category %></p>
      </div>

      <div class="content">
        <% if (summary) { %>
        <div class="section">
          <h2>üìù Situation Summary</h2>
          <div class="situation-box"><%= summary.situation %></div>
        </div>

        <div class="section">
          <h2>‚öñÔ∏è Relevant Philippine Laws</h2>
          <ul class="laws-list">
            <% summary.relevantLaws.forEach(law => { %>
            <li><%= law %></li>
            <% }) %>
          </ul>
        </div>

        <div class="section">
          <h2>‚úÖ Recommended Steps</h2>
          <ol class="steps-list">
            <% summary.recommendedSteps.forEach(step => { %>
            <li><%= step %></li>
            <% }) %>
          </ol>
        </div>

        <div class="section">
          <h2>üìû Important Contacts</h2>
          <div class="contacts-grid">
            <% for (const [key, value] of Object.entries(summary.contacts)) { %>
            <div class="contact-card">
              <strong><%= key.toUpperCase() %></strong>
              <span><%= value %></span>
            </div>
            <% } %>
          </div>
        </div>

        <div class="section">
          <h2>üö® Next Action (URGENT)</h2>
          <div class="next-action"><%= summary.nextAction %></div>
        </div>
        <% } else { %>
        <p>No summary available yet. Processing...</p>
        <% } %>

        <div class="actions">
          <button class="btn btn-primary" onclick="generateReport()">
            üìÑ Download Report
          </button>
          <button class="btn btn-secondary" onclick="window.location.href='/'">
            üè† New Consultation
          </button>
        </div>
      </div>
    </div>

    <script>
      async function generateReport() {
        const sessionId = "<%= session.sessionId %>";
        //    '<% if (summary) { %>
        //       const summary = <%- JSON.stringify(summary) %>;
        //     <% } else { %>
        //       const summary = null;
        //     <% } %>'

        if (!summary || !summary.situation) {
          alert("Summary not available yet. Please wait for processing.");
          return;
        }

        try {
          const response = await fetch("/api/report/generate", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              sessionId,
              reportType: "INCIDENT",
              templateData: {
                category: "<%= session.category %>",
                userName: "User",
                respondentName: "Respondent",
                incidentDate: new Date().toLocaleDateString("en-PH"),
                details: summary.situation,
                relevantLaws: summary.relevantLaws,
                recommendedSteps: summary.recommendedSteps,
              },
            }),
          });

          const report = await response.json();
          window.open(report.fileUrl, "_blank");
        } catch (error) {
          alert("Error generating report. Please try again.");
          console.error(error);
        }
      }
    </script>
  </body>
</html>
